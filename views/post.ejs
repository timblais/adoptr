<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>adoptr</title>
    <link href="../css/output.css" rel="stylesheet">
</head>
<body>
    <nav>
        <div class="navbar bg-base-100 bg-primary text-primary-content">
            <div class="navbar-start">
              <ul class="menu menu-horizontal p-0">
                <li>
                    <a href ="/feed">
                        <img class="w-14 rounded-full" src="../imgs/dogAndCat.PNG">
                    </a>
                </li>
              </ul>
            </div>
            <div class="navbar-center">
                <a href ="/feed" class="btn btn-ghost normal-case text-3xl">adoptr</a>
            </div>
            <div class="navbar-end">
              <ul class="menu menu-horizontal p-0">
                <li><a href ="/feed">Feed</a></li>
                <li><a href ="/newPost">New Post</a></li>
                <li><a href ="/profile/<%=user._id%>">Profile</a></li>
                <li><a href ="/account">Account</a></li>
              </ul>
            </div>
          </div>
    </nav>
    
    <section class="w-full flex justify-center">
        
      <ul class="w-11/12 md:w-8/12 pt-4 flex-col justify-center items-center"  >
          <% posts.forEach(e => { %>
              <li class="card sm:card-side bg-base-100 shadow-xl m-4 w-11/12">
                  <a href="/post/<%=e._id%>">
                      <figure><img src="<%=e.image%>" alt="postImage"/></figure>
                      <div class="card-body">
                        <h2 class="card-title"><%=e.title%></h2>
                        <p><%=e.caption%></p>
                        <% users.forEach(u => { %>
                          <% if (e.user == u.id) { %>
                            <span>
                              <a href="/profile/<%=e.user%>"><%=u.userName%></a>
                            </span>
                          <% } %>
                        <% }) %>
                      </div>
                  </a>
              </li>
          <% }) %> 
      </ul>
  </section>
   
    
    
</body>
</html>